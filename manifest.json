{
  "manifest_version": 3,
  "name": "Crypto Trading Bot Extension",
  "version": "1.0.0",
  "description": "볼린저 밴드 기반 암호화폐 자동매매 크롬 익스텐션",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "sidePanel",
    "scripting"
  ],
  "action": {
    "default_title": "Crypto Trading Bot"
  },
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js"
  }
}

